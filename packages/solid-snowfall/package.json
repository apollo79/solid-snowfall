{
  "name": "solid-snowfall",
  "description": "A solidjs component that creates a snowfall effect",
  "version": "0.3.0",
  "keywords": [
    "solid",
    "solidjs",
    "component",
    "snowfall",
    "winter",
    "christmas"
  ],
  "license": "MIT",
  "author": "https://github.com/apollo79",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollo79/solid-snowfall.git"
  },
  "homepage": "https://apollo79.github.io/solid-snowfall",
  "bugs": {
    "url": "https://github.com/apollo79/solid-snowfall/issues"
  },
  "private": false,
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "solid": "./dist/source/index.jsx",
      "import": "./dist/esm/index.js",
      "browser": {
        "import": "./dist/esm/index.js",
        "require": "./dist/cjs/index.js"
      },
      "require": "./dist/cjs/index.js",
      "node": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "dev": "vite serve dev",
    "build": "rollup -c rollup.config.ts",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "format-check": "prettier -- --list-different",
    "validate": "npm-run-all --parallel type-check lint",
    "test": "vitest"
  },
  "type": "module",
  "devDependencies": {
    "@solidjs/testing-library": "^0.8.4",
    "@testing-library/jest-dom": "^6.1.5",
    "jsdom": "^23.0.1",
    "rollup": "^4.7.0",
    "rollup-preset-solid": "^2.0.1",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@solid-primitives/deep": "^0.2.4",
    "@solid-primitives/resize-observer": "^2.0.22",
    "fast-deep-equal": "^3.1.3"
  },
  "peerDependencies": {
    "solid-js": "^1.8.7"
  },
  "lint-staged": {
    "*.+(js|json|ts|tsx)": [
      "pnpm run format"
    ],
    "*.+(js|ts|tsx)": [
      "pnpm run lint"
    ]
  }
}
