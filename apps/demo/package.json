    "solid-js": "^1.6.6",
    "solid-snowfall": "workspace:^0.1.0"
  },
  "lint-staged": {
    "*.+(js|json|ts|tsx)": [
      "pnpm run format"
    ],
    "*.+(js|ts|tsx)": [
      "pnpm run lint"
    ]
  },
  "devDependencies": {
    "sass": "^1.57.1"
  }
